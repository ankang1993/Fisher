<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC 
	"-//Apache Struts//XWork Validator 1.0.3//EN"
	"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="emp.name">
		<field-validator type="requiredstring">
			<message>用户名必填！</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[(\w{4,25})]]></param>
			<message>您输入的用户名只能是字母和数字，且长度必须在4到25之间</message>
		</field-validator>
	</field>
	<field name="emp.pass">
		<field-validator type="requiredstring">
			<message>密码必填！</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[(\w{4,25})]]></param>
			<message>您输入的密码只能是字母和数字，且长度必须在4到25之间</message>
		</field-validator>
	</field>
	<field name="confimpass">
		<field-validator type="requiredstring">
			<message>确认密码必填！</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[(\w{4,25})]]></param>
			<message>您输入的密码只能是字母和数字，且长度必须在4到25之间</message>
		</field-validator>
	</field>
	<field name="emp.phone">
		<field-validator type="requiredstring">
			<message>电话必填！</message>
		</field-validator>
		<!--<field-validator type="regex">-->
			<!--<param name="regex"><![CDATA[(\w{4,25})]]></param>-->
			<!--<message>您输入的电话只能是字母和数字，且长度必须在4到25之间</message>-->
		<!--</field-validator>-->
	</field>
</validators>